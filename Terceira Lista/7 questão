#include <stdio.h>

int main() {
    int vetor[10], inverso[10];

    printf("Digite 10 números inteiros:\n");
    for (int i = 0; i < 10; i++) {
        printf("Número %d: ", i + 1);
        scanf("%d", &vetor[i]);
    }

    // Preenche o vetor inverso
    for (int i = 0; i < 10; i++) {
        inverso[i] = vetor[9 - i];
    }

    printf("Vetor invertido:\n");
    for (int i = 0; i < 10; i++) {
        printf("%d ", inverso[i]);
    }
    printf("\n");

    return 0;
}  